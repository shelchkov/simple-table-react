{
  "name": "simple-table-react",
  "version": "0.0.4",
  "description": "React table",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "start": "webpack serve",
    "build": "npm run copy-css && npm run compile:ts",
    "lint:fix": "npm run lint -- --fix",
    "test:cov": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "build:app": "NODE_ENV=production webpack",
    "prebuild": "rm -rf dist",
    "copy-css": "mkdir dist && mkdir dist/styles && cp -r ./src/lib/styles/ ./dist/styles/",
    "compile:ts": "tsc",
    "prepublishOnly": "npm run build",
    "lint": "npx eslint \"./src/**/*.{ts,tsx,js,jsx}\"",
    "preversion": "npm run lint:fix",
    "postversion": "git push; git push --tags",
    "test": "jest --config jestconfig.json",
    "prebuild:app": "rm -rf demo-app/dist"
  },
  "keywords": [
    "react",
    "ui",
    "table"
  ],
  "devDependencies": {
    "@types/enzyme": "^3.10.9",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "css-loader": "^6.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.1.0",
    "path": "^0.12.7",
    "prettier": "^2.3.2",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "style-loader": "^3.2.1",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^3.11.2"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0"
  }
}
