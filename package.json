{
  "name": "simple-table-react",
  "version": "0.0.1",
  "description": "React table",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "start": "webpack serve",
    "build": "npm run copy-css && npm run compile:ts",
    "prebuild": "rm -rf dist",
    "copy-css": "mkdir dist && mkdir dist/styles && cp -r ./src/lib/styles/ ./dist/styles/",
    "compile:ts": "tsc",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "ui",
    "table"
  ],
  "devDependencies": {
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "css-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "path": "^0.12.7",
    "style-loader": "^3.2.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.2",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^3.11.2"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0",
    "react-dom": "^16.8.0 || ^17.0.0"
  }
}
