{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["./src/lib/**/*"],
  "exclude": ["node_modules", "dist", "src/lib/__tests__"]
}